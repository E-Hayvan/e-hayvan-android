<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="registerVM" type="com.ehayvan.app.modules.register.data.viewmodel.RegisterVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearRegister"
        android:layout_height="match_parent"
        android:background="@drawable/dog"
        android:layout_width="match_parent" android:orientation="vertical">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearOnboardingCr"
            android:layout_height="match_parent"
            android:layout_width="435dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/img_actionsheetba"
            android:orientation="vertical" style="@style/groupStylecornerRadius">
            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearActionSheetCo"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_29pxv"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStyle">
                <FrameLayout android:gravity="start"
                    android:id="@+id/frameStacktitle"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent" style="@style/groupStyle">
                    <LinearLayout android:id="@+id/linearActionSheet"
                        android:layout_gravity="top|start"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical" style="@style/groupStylecornerRadius_3">
                        <ImageView
                            android:background="@drawable/rectangle_border_blue_50_radius_32"
                            android:id="@+id/btnIconFrame"
                            android:layout_gravity="top|center"
                            android:layout_height="@dimen/_64pxh"
                            android:layout_marginStart="15dp"
                            android:layout_width="@dimen/_64pxh"
                            android:paddingVertical="@dimen/_18pxv"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_iconframe" tools:ignore="ContentDescription"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtTitle"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginTop="@dimen/_12pxv"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_17pxh"
                            android:singleLine="true"
                            style="@style/txtCatamaranbold26" android:text="@string/lbl_sign_up"/>
                        <TextView android:gravity="center_horizontal"
                            android:id="@+id/txtBody"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_width="match_parent"
                            android:lineSpacingExtra="@dimen/_8pxh"
                            style="@style/txtNotoSansnotosansmedium16" android:text="@string/msg_welcome_please"/>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:id="@+id/linearInputBox"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginTop="@dimen/_9pxv"
                            android:layout_width="match_parent"
                            android:orientation="vertical" style="@style/groupStylecornerRadius_1">
                            <LinearLayout
                                android:gravity="center_horizontal"
                                android:id="@+id/linearInputContent1"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical" style="@style/groupStylewhite_A700cornerRadius">
                                <EditText android:ellipsize="end"
                                    android:gravity="start"
                                    android:id="@+id/txtLabel1"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent"
                                    android:paddingBottom="@dimen/_13pxv"
                                    android:paddingEnd="@dimen/_30pxh"
                                    android:paddingStart="@dimen/_16pxh"
                                    android:paddingTop="@dimen/_16pxv"
                                    android:lineSpacingExtra="@dimen/_6pxh"
                                    android:singleLine="true"
                                    android:textColorHint="@color/bluegray_400"
                                    android:text="@{registerVM.registerModel.etInputContentOneValue}"
                                    style="@style/etSolidRoundedOutline" tools:ignore="Autofill" android:hint="@string/msg_name_and_surnam"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:id="@+id/linearInputBox1"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginTop="@dimen/_6pxv"
                            android:layout_width="match_parent"
                            android:orientation="vertical" style="@style/groupStylecornerRadius_1">
                            <LinearLayout
                                android:gravity="center_horizontal"
                                android:id="@+id/linearInputContent2"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical" style="@style/groupStylewhite_A700cornerRadius">
                                <EditText android:ellipsize="end"
                                    android:gravity="start"
                                    android:id="@+id/txtLabel2"
                                    android:inputType="text"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent"
                                    android:paddingBottom="@dimen/_13pxv"
                                    android:paddingEnd="@dimen/_30pxh"
                                    android:paddingStart="@dimen/_16pxh"
                                    android:paddingTop="@dimen/_16pxv"
                                    android:lineSpacingExtra="@dimen/_6pxh"
                                    android:singleLine="true"
                                    android:text="@{registerVM.registerModel.etInputContentTwoValue}"
                                    android:textColorHint="@color/bluegray_400"
                                    style="@style/etSolidRoundedOutline" tools:ignore="Autofill" android:hint="@string/lbl_your_email"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:id="@+id/linearInputBox2"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_width="match_parent"
                            android:orientation="vertical" style="@style/groupStylecornerRadius_1">
                            <LinearLayout
                                android:gravity="center_horizontal"
                                android:id="@+id/linearInputContent3"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical" style="@style/groupStylewhite_A700cornerRadius">
                                <EditText android:ellipsize="end"
                                    android:gravity="start"
                                    android:id="@+id/txtLabel3"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent"
                                    android:paddingBottom="@dimen/_13pxv"
                                    android:paddingEnd="@dimen/_30pxh"
                                    android:paddingStart="@dimen/_16pxh"
                                    android:paddingTop="@dimen/_16pxv"
                                    android:inputType="textPassword"
                                    android:lineSpacingExtra="@dimen/_6pxh"
                                    android:singleLine="true"
                                    android:text="@{registerVM.registerModel.etInputContentThreeValue}"
                                    android:textColorHint="@color/bluegray_400"
                                    style="@style/etSolidRoundedOutline" tools:ignore="Autofill" android:hint="@string/lbl_password"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:gravity="start"
                            android:id="@+id/linearRowtext"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_width="match_parent" android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:buttonTint="@color/bluegray_101"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_sans"
                                android:id="@+id/checkBoxText"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1pxv"
                                android:layout_weight="0.47"
                                android:layout_width="0dp"
                                android:lineSpacingExtra="@dimen/_6pxh"
                                android:paddingStart="@dimen/_8pxh"
                                android:singleLine="true"
                                android:text="@string/lbl_pet_owner"
                                android:textColor="@color/bluegray_400"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_14pxh"
                                android:textStyle="bold" tools:text="@string/lbl_pet_owner"/>
                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:buttonTint="@color/bluegray_101"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_sans"
                                android:id="@+id/checkBoxTextOne"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginStart="@dimen/_31pxh"
                                android:layout_weight="0.53"
                                android:layout_width="0dp"
                                android:lineSpacingExtra="@dimen/_6pxh"
                                android:paddingStart="@dimen/_8pxh"
                                android:singleLine="true"
                                android:text="@string/lbl_veterinarian"
                                android:textColor="@color/bluegray_400"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_14pxh"
                                android:textStyle="bold" tools:text="@string/lbl_veterinarian"/>
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:buttonTint="@color/bluegray_101"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans"
                            android:id="@+id/checkBoxTextTwo"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:layout_marginTop="@dimen/_16pxv"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:paddingStart="@dimen/_8pxh"
                            android:singleLine="true"
                            android:text="@string/msg_accept_terms_an"
                            android:textColor="@color/bluegray_400"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_14pxh"
                            android:textStyle="bold" tools:text="@string/msg_accept_terms_an"/>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:id="@+id/linearPrimaryButton"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_24pxv"
                            android:layout_width="match_parent"
                            android:orientation="vertical" style="@style/groupStyleblue_600cornerRadius">
                            <TextView android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:textAlignment="center"
                                android:id="@+id/txtButton"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_width="match_parent"
                                android:lineSpacingExtra="@dimen/_6pxh"
                                android:singleLine="true"
                                style="@style/txtNotoSansnotosansmedium14" android:text="@string/lbl_sign_up"/>
                        </LinearLayout>
                        <TextView android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:id="@+id/txtConfirmation"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:singleLine="true"
                            style="@style/txtNotoSansnotosansmedium14_1"
                            android:text="@string/msg_already_have_an"/>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/holo_blue_dark"
            android:padding="150dp"
            android:background = "@color/white"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>
</layout>
