<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="editPetRecordsTwoVM" type="com.barsapplication.app.modules.editpetrecordstwo.data.viewmodel.EditPetRecordsTwoVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearEditPetRecord"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:orientation="vertical">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearEditPetRecord1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylegray_50cornerRadius">
            <androidx.appcompat.widget.Toolbar
                android:gravity="center_horizontal"
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:id="@+id/linearNavigationHead"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/btnArrowLeft"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:layout_marginBottom="@dimen/_15pxv"
                        android:layout_marginStart="@dimen/_4pxh"
                        android:scaleType="centerCrop"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/img_arrowleft"
                        android:contentDescription="@string/content_description_arrow_left"
                        android:padding="7dp"/>


                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/linearColumnbody"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7pxh"
                        android:layout_marginTop="17dp"
                        android:layout_weight="0.72"
                        android:layout_width="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:ellipsize="end"
                            android:id="@+id/txtBody"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:singleLine="true"
                            android:text="@{editPetRecordsThreeVM.editPetRecordsThreeModel.txtBody}"
                            style="@style/txtNotoSansnotosansregular14"
                            tools:text="@string/msg_edit_pet_record"/>


                        <TextView
                            android:id="@+id/txtTitle"
                            style="@style/txtCatamaranromansemibold16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/_11pxh"
                            android:singleLine="true"
                            android:text="@{editPetRecordsThreeVM.editPetRecordsThreeModel.txtTitle}"
                            tools:text="@string/lbl_drops" />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnDudu"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_7pxh"
                        android:layout_width="@dimen/_65pxh"
                        android:lineSpacingExtra="@dimen/_6pxh"
                        android:paddingBottom="@dimen/_10pxv"
                        android:paddingEnd="@dimen/_14pxh"
                        android:paddingStart="@dimen/_14pxh"
                        android:paddingTop="@dimen/_10pxv"
                        android:layout_marginTop="15dp"
                        android:singleLine="true"
                        android:text="@string/lbl_dudu"
                        android:textAllCaps="false"
                        style="@style/btnSolidRoundedOutline" tools:text="@string/lbl_dudu"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <View
                android:background="@drawable/rectangle_gradient_s_bluegray_400_87_e_bluegray_400_87"
                android:id="@+id/lineLine"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_1pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_9pxv" android:layout_width="@dimen/_327pxh"/>

            <LinearLayout
                android:id="@+id/linearCardHorizontal"
                style="@style/groupStylewhite_1"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitleOne"
                    style="@style/txtNotoSansnotosanssemibold14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/_6pxh"
                    android:singleLine="true"
                    android:text="@{editPetRecordsTwoVM.editPetRecordsTwoModel.txtTitleOne}"
                    tools:text="@string/lbl_clevor" />

                <LinearLayout
                    android:id="@+id/linearBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginBottom="@dimen/_14pxv"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVector"
                        android:layout_width="@dimen/_12pxh"
                        android:layout_height="@dimen/_13pxh"
                        android:layout_marginStart="@dimen/_3pxh"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_marginBottom="@dimen/_3pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_vector_bluegray_202"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_vector_bluegray_202" />

                    <TextView
                        android:id="@+id/txt11032023"
                        style="@style/txtNotoSansnotosansmedium14_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.29"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_6pxh"
                        android:singleLine="true"
                        android:text="@{editPetRecordsTwoVM.editPetRecordsTwoModel.txt11032023}"
                        tools:text="@string/lbl_11_03_2023" />

                    <View
                        android:id="@+id/lineDivider"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_15pxv"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_weight="0.0"
                        android:background="@color/gray_300" />

                    <TextView
                        android:id="@+id/txtLanguage"
                        style="@style/txtNotoSansnotosansmedium14_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.31"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_6pxh"
                        android:singleLine="true"
                        android:text="@{editPetRecordsTwoVM.editPetRecordsTwoModel.txtLanguage}"
                        tools:text="@string/lbl_4_drops_left" />

                    <View
                        android:id="@+id/lineDividerOne"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_15pxv"
                        android:layout_marginStart="@dimen/_6pxh"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_weight="0.0"
                        android:background="@color/gray_300" />

                    <TextView
                        android:id="@+id/txtDuration"
                        style="@style/txtNotoSansnotosansmedium14_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginEnd="@dimen/_1pxh"
                        android:layout_weight="0.34"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_6pxh"
                        android:singleLine="true"
                        android:text="@{editPetRecordsTwoVM.editPetRecordsTwoModel.txtDuration}"
                        tools:text="@string/lbl_every_5_days" />
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginTop="420dp"
                android:id="@+id/btnReserve"
                android:layout_height="65dp"
                android:layout_width="400dp"
                android:lineSpacingExtra="@dimen/_6pxh"
                android:paddingBottom="@dimen/_18pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_18pxv"
                android:singleLine="true"
                android:text="@string/lbl_reserve"
                android:textAllCaps="false"
                style="@style/btnSolidRounded"
                tools:text="Edit Pet Records" />

        </LinearLayout>
    </LinearLayout>
</layout>
