<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listPetRowModel" type="com.ehayvan.app.modules.petownerdashboard.data.model.ListPetRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearCardHorizontal1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_13pxh"
        android:layout_marginStart="@dimen/_16pxh"
        android:layout_marginTop="@dimen/_21pxv"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyleblue_1">
        <TextView android:ellipsize="end"
            android:id="@+id/txtTitleOne"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_22pxh"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_39pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_8pxh"
            android:singleLine="true"
            android:text="@{listPetRowModel.txtTitleOne}"
            style="@style/txtNotoSansnotosanssemibold20" tools:text="Dudu"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtPriceOne"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_36pxv"
            android:layout_marginEnd="@dimen/_22pxh"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_5pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_6pxh"
            android:singleLine="true"
            android:text='@{listPetRowModel.txtPriceOne + " | " + listPetRowModel.txtAge + " years old"}'
            style="@style/txtNotoSansnotosansregular14_1" tools:text="@string/msg_dog_3_years_o"/>
    </LinearLayout>
</layout>

